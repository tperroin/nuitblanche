                <tr>
                    <td class="map">
                       {{ replay.map }}
                    </td>
                    <td class="player player-left">
                         {% for player in replay.team1 %}
                            {% if player.player %}<a href="{{ url('player_show', {"user_id": player.player.user.id}) }}">{% endif %}
                            {{ player.name }}
                            {% if player.player %}</a>{% endif %}
                            <img class="race-icon" src="{{ asset('bundles/ihqsnuitblanche/images/ico/' ~ player.race ~ '_icon.png') }}" />
                            <br />
                         {% endfor %}
                    </td>
                    <td class="separator"></td>
                    <td class="player player-right">
                         {% for player in replay.team2 %}
                            <img class="race-icon" src="{{ asset('bundles/ihqsnuitblanche/images/ico/' ~ player.race ~ '_icon.png') }}" />
                            {% if player.player %}<a href="{{ url('player_show', {"user_id": player.player.user.id}) }}">{% endif %}
                            {{ player.name }}
                            {% if player.player %}</a>{% endif %}
                            <br />
                         {% endfor %}
                    </td>
                    <td class="date">{{ replay.date.format('d/m/Y') }}</td>
                    <td class="downloads">
                        {{ replay.replay.downloads }}
                    </td>
                    <td class="view">
                        <a href="{{ url('replay_show', { 'replay_id' : replay.replay.id }) }}">
                            <img class="ico" src="{{ asset('bundles/ihqsnuitblanche/images/ico/watch.png') }}" alt="{{ "details" | trans }}">
                        </a>
                    </td>
                    <td class="download">
                        <a href="{{ url('replay_file_download', { 'replay_id' : replay.replay.id }) }}">
                            <img class="ico" src="{{ asset('bundles/ihqsnuitblanche/images/ico/save.png') }}" alt="{{ "download" | trans }}">
                        </a>
                    </td>
                </tr>