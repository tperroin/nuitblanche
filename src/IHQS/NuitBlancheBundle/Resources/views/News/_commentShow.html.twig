<li>
    <a class="avatar" href="{{ url('player_show', {'user_id': comment.author.id}) }}">
        <img src="{{ comment.author.avatarUrl }}" />
    </a>
    <p class="meta"  style="float: left;">
        #{{ number }}
        - <a href="{{ url('player_show', {'user_id': comment.author.id}) }}">{{ comment.author.username }}</a>
        - {{ comment.date.format('d/m/Y - H:i') }}
    </p>
    <ul class="actions">
        <li>&nbsp;</li>
        {% if comment.isAuthor(connected_user()) %}
        <li class="edit">
            <a href="{{ url('news_comment_edit', { "id": comment.id }) }}" >
                <span>edit</span>
            </a>
        </li>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
        <li class="delete">
            <a href="{{ url('news_comment_delete', { "id": comment.id }) }}" onclick="return confirm('{{ "Are you sure to delete this comment ?" | trans }}');">
                <span>delete</span>
            </a>
        </li>
        {% endif %}
    </ul>
    <div class="main" style="clear:right;">
        {{ comment.body | raw }}
    </div>
</li>