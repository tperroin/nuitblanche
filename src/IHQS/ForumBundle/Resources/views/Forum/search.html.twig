{% extends 'ForumBundle::layout.html.twig' %}

{% block title %}{{ "Search in forum" | trans }}{% endblock %}

{% block content %}
<div class="forum forum_search">
    <ul class="crumbs filters">
        <li class="first"><a href="{{ path('forum_index') }}">{{ "Forum" | trans }}</a></li>
        <li class="last">{{ "Search" | trans }}</li>
    </ul>
    <form class="clearfix" action="{{ url('forum_search') }}" method="get">
        <div>
            <label for="q">{{ form_label(form.query) }}</label>
            <input type="text" name="q" value="{{ query }}" />
        </div>
        <div>
            <button type="submit" value="Search">Search</button>
        </div>
    </form>

    <div class="main topic">
        {% include 'ForumBundle:Post:list.html.twig' with {'posts': results } %}
    </div>
</div>
{% endblock %}
